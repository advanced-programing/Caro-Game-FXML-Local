<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hellofxml.FXMLGameTypeController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <top>
            <Label prefHeight="120.0" prefWidth="507.0" text=" Choose Game Type You Want To Play" BorderPane.alignment="CENTER">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
         </top>
         <center>
            <VBox alignment="TOP_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="playerTypeButton" mnemonicParsing="false" onAction="#playerTypeAction" prefHeight="30.0" prefWidth="180.0" text="Play with another player">
                     <font>
                        <Font size="13.0" />
                     </font></Button>
                  <Button fx:id="computerTypeButton" mnemonicParsing="false" onAction="#computerTypeAction" prefHeight="30.0" prefWidth="180.0" text="Play with computer">
                     <font>
                        <Font size="13.0" />
                     </font></Button>
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </VBox>
         </center>
         <bottom>
            <Button fx:id="home" mnemonicParsing="false" onAction="#goHome" prefHeight="30.0" prefWidth="90.0" text="Home" BorderPane.alignment="CENTER">
               <font>
                  <Font size="13.0" />
               </font>
               <BorderPane.margin>
                  <Insets bottom="10.0" />
               </BorderPane.margin>
            </Button>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
