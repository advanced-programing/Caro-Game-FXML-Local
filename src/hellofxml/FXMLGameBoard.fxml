<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hellofxml.FXMLGameBoardController">
   <children>
      <BorderPane layoutX="-1.0" layoutY="-1.0" prefHeight="500.0" prefWidth="500.0">
         <center>
            <HBox fx:id="boardPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#handle2Player" prefHeight="450.0" prefWidth="450.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </HBox>
         </center>
         <top>
            <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox alignment="TOP_CENTER" prefHeight="90.0" prefWidth="140.0">
                     <children>
                        <Label fx:id="player1Name" text="Player 1">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <Label fx:id="player1Label" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="SCORE">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <Label fx:id="score" prefHeight="53.0" prefWidth="75.0" text="0 | 0">
                           <font>
                              <Font size="36.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" prefHeight="90.0" prefWidth="140.0">
                     <children>
                        <Label fx:id="player2Name" text="Player 2">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <Label fx:id="player2Label" />
                     </children>
                  </VBox>
               </children>
               <BorderPane.margin>
                  <Insets left="10.0" right="10.0" />
               </BorderPane.margin>
            </HBox>
         </top>
         <bottom>
            <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="newGame" mnemonicParsing="false" onAction="#handleNewGame" prefHeight="30.0" prefWidth="90.0" text="New Game">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
                  <Button fx:id="newMatch" mnemonicParsing="false" onAction="#handleNewMatch" prefHeight="30.0" prefWidth="90.0" text="New Match">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
                  <Button fx:id="quit" mnemonicParsing="false" onAction="#quitGame" prefHeight="30.0" prefWidth="90.0" text="Quit">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
