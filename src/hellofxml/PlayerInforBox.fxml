<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="200.0" prefWidth="500.0" stylesheets="@../style/lableStyle.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hellofxml.PlayerInforBoxController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="500.0" styleClass="sub_background">
         <center>
            <VBox prefHeight="200.0" prefWidth="465.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="50.0" prefWidth="500.0" spacing="30.0">
                     <children>
                        <Label fx:id="playerName1" styleClass="label3" text="Player 1 Name">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <TextField fx:id="nameInput1" prefHeight="30.0" prefWidth="275.0">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </TextField>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                     </padding>
                  </HBox>
                  <HBox prefHeight="50.0" prefWidth="500.0" spacing="30.0">
                     <children>
                        <Label fx:id="playerName2" styleClass="label3" text="Player 2 Name">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <TextField fx:id="nameInput2" prefHeight="30.0" prefWidth="275.0">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </TextField>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </center>
         <bottom>
            <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="500.0" spacing="10.0" BorderPane.alignment="TOP_CENTER">
               <children>
                  <Button fx:id="startButton" mnemonicParsing="false" onAction="#startAction" prefHeight="40.0" prefWidth="80.0" styleClass="button3" text="Start">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelAction" prefHeight="40.0" prefWidth="80.0" styleClass="button4" text="Cancel">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="20.0" left="10.0" right="20.0" top="10.0" />
               </padding>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
